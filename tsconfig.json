{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "allowJs": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "outDir": "Build",
      "typeRoots": [
        "node_modules/@types",
        "Source/Types"
      ],
      "types": ["mersenne-twister", "ThirdParty/mersenne-twister"],
      "paths": {
        "@/*": [
          "Source/*"
        ],
        "*": [
          "node_modules/*",
          "Source/Types/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
      "Source/*.ts",
      "Source/**/*.ts",
      "Source/**/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }